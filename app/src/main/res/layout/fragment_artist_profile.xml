<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainbeats.fragments.ArtistProfileFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="45dp"
            android:paddingStart="45dp">

            <EditText
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="Artist Name"
                android:singleLine="true"
                android:textColor="@color/theme_secondary_text_color"
                android:textSize="@dimen/album_detail_title_text_size" />

            <ImageView
                android:id="@+id/profile_cover_image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/profile_placeholder"
                android:layout_marginTop="@dimen/fragment_content_item_top_margin"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <EditText
                android:id="@+id/artist_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="About "
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="@color/theme_secondary_text_color"
                android:textSize="@dimen/album_detail_title_text_size" />

            <Button
                android:id="@+id/confirm_save_artist_detail_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/login_button_background"
                android:layout_gravity="center_horizontal"
                android:text="Save"
                android:textColor="@color/theme_primary_text_color"
                android:textStyle="bold" />

        </LinearLayout>

</FrameLayout>
