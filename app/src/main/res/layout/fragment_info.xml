<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainbeats.fragments.InfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Brain Beats is an audio streaming application that allows users stream and listen to music. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2" />

    <TextView
        android:text="www.BrainBeats.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="56dp"
        android:textSize="14sp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Doug4less@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="36dp"
        android:textSize="14sp"
        android:id="@+id/textView6" />

</RelativeLayout>
