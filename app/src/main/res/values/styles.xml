<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BrainBeatsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/theme_primary_dark_color</item>
        <item name="colorPrimary">@color/theme_primary_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
        <item name="android:textColorPrimary">@color/theme_primary_text_color</item>
        <item name="android:textColorSecondary">@color/theme_secondary_text_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
        <item name="background">@android:color/white</item>
        <item name="android:divider">@color/blue_horizontal_divider_background_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>
